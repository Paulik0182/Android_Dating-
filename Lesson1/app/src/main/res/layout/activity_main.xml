<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/winter_snow_nature_991389"
    android:orientation="vertical"
    android:weightSum="6"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/screen"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center|right"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        android:layout_weight="1"
        android:background="#3C96F898"
        android:padding="10dp"
        android:text="0"
        android:textColor="#4949E8"
        android:textSize="40sp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        style="@style/Layout"
        app:layout_constraintTop_toBottomOf="@+id/screen"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp">

        <Button
            android:id="@+id/c"
            style="@style/button"
            android:text="C" />

        <Button
            android:id="@+id/test1"
            style="@style/button"
            android:text="" />

        <Button
            android:id="@+id/test2"
            style="@style/button"
            android:text="" />

        <Button
            android:id="@+id/divide"
            style="@style/button"
            android:text="/" />
    </LinearLayout>

    <LinearLayout
        style="@style/Layout"
        app:layout_constraintTop_toBottomOf="@+id/screen"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp">

        <Button
            android:id="@+id/seven"
            style="@style/button"
            android:text="7" />

        <Button
            android:id="@+id/eight"
            style="@style/button"
            android:text="8" />

        <Button
            android:id="@+id/nine"
            style="@style/button"
            android:text="9" />

        <Button
            android:id="@+id/multiply"
            style="@style/button"
            android:text="x" />
    </LinearLayout>

    <LinearLayout
        style="@style/Layout"
        app:layout_constraintTop_toBottomOf="@+id/screen"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp">

        <Button
            android:id="@+id/four"
            style="@style/button"
            android:text="4" />

        <Button
            android:id="@+id/five"
            style="@style/button"
            android:text="5" />

        <Button
            android:id="@+id/six"
            style="@style/button"
            android:text="6" />

        <Button
            android:id="@+id/plus"
            style="@style/button"
            android:text="+" />
    </LinearLayout>

    <LinearLayout
        style="@style/Layout"
        app:layout_constraintTop_toBottomOf="@+id/screen"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp">

        <Button
            android:id="@+id/one"
            style="@style/button"
            android:text="1" />

        <Button
            android:id="@+id/two"
            style="@style/button"
            android:text="2" />

        <Button
            android:id="@+id/three"
            style="@style/button"
            android:text="3" />

        <Button
            android:id="@+id/minus"
            style="@style/button"
            android:text="-" />
    </LinearLayout>

    <LinearLayout
        style="@style/Layout"
        app:layout_constraintTop_toBottomOf="@+id/screen"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp">

        <Button
            android:id="@+id/zero"
            style="@style/button"
            android:text="0" />

        <Button
            android:id="@+id/point"
            style="@style/button"
            android:text="." />

        <Button
            android:id="@+id/percent"
            style="@style/button"
            android:text="%" />

        <Button
            android:id="@+id/equally"
            style="@style/button"
            android:text="=" />
    </LinearLayout>

</LinearLayout>